# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key
SUPABASE_DB_SCHEMA=app
SUPABASE_PROJECT_REF=your-supabase-project-ref
SUPABASE_ACCESS_TOKEN=your-supabase-access-token

# Database
DATABASE_BACKEND=supabase # supabase, postgres
DATABASE_URL=postgresql://user:password@localhost:5432/owner_db
DATABASE_POOL_MIN_CONN=1
DATABASE_POOL_MAX_CONN=10

# Twilio Configuration (Default - can be overridden per owner)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890
MY_PHONE_NUMBER=+5511999998889

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False
API_ENVIRONMENT=development
API_USE_FAKE_SENDER=False
API_BYPASS_SUBSCRIPTION_CHECK=False

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Conversation Settings
# 48 hours
CONVERSATION_PENDING_EXPIRATION_MINUTES=2880
# 24 hours
CONVERSATION_EXPIRATION_MINUTES=1440
# 1 hour
CONVERSATION_IDLE_TIMEOUT_MINUTES=60
# 30 seconds
CONVERSATION_MIN_DURATION_SECONDS=30

# Closure Keywords (comma-separated)
CLOSURE_KEYWORDS=tchau,obrigado,valeu,até logo,até mais,até breve,bye,thanks

# Logging
LOG_LEVEL=INFO

# Toggle Settings
ENABLE_BACKGROUND_TASKS=True

# LLMs Configuration
OPENAI_API_KEY=sk...
GOOGLE_API_KEY=AI...
GROQ_API_KEY=gsk_...
ANTHROPIC_API_KEY=sk-ant-api03-...

# Queue Configuration
QUEUE_BACKEND=sqlite # sqlite, bullmq, sqs
QUEUE_SQLITE_DB_PATH=queue.db
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/my-queue
QUEUE_AWS_REGION=us-east-1
QUEUE_AWS_ACCESS_KEY_ID=AKIA...
QUEUE_AWS_SECRET_ACCESS_KEY=secret...

# Whisper Transcription Configuration
# tiny, base, small, medium, large-v3
WHISPER_SIZE=base
# cpu, cuda, auto
WHISPER_DEVICE=cpu
# int8, int8_float32, int8_float16, int8_bfloat16, int16, float16, bfloat16, float32
WHISPER_COMPUTE_TYPE=int8
# Higher values improve accuracy but slow down transcription
WHISPER_BEAM_SIZE=5

# LLM Configuration
LLM_PROVIDER=ollama
LLM_MODEL_NAME=gpt-oss:20b

# Memory / Retrieval (L1/L2/L3)
MEMORY_RECENT_MESSAGES_LIMIT=10
MEMORY_REDIS_MAX_MESSAGES=50
MEMORY_REDIS_TTL_SECONDS=3600
MEMORY_REDIS_RECONNECT_BACKOFF_SECONDS=30
MEMORY_SEMANTIC_TOP_K=3
MEMORY_SEMANTIC_MATCH_THRESHOLD=0.0
MEMORY_ENABLE_HYBRID_RETRIEVAL=True
MEMORY_HYBRID_WEIGHT_VECTOR=1.5
MEMORY_HYBRID_WEIGHT_TEXT=1.0
MEMORY_HYBRID_RRF_K=60
MEMORY_FTS_LANGUAGE=portuguese
