# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/owner_db

# Twilio Configuration (Default - can be overridden per owner)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890
MY_PHONE_NUMBER=+5511999998889

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False
API_ENVIRONMENT=development
API_USE_FAKE_SENDER=False

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Conversation Settings
CONVERSATION_PENDING_EXPIRATION_MINUTES=2880 # 48 hours
CONVERSATION_EXPIRATION_MINUTES=1440 # 24 hours
CONVERSATION_IDLE_TIMEOUT_MINUTES=60 # 1 hour
CONVERSATION_MIN_DURATION_SECONDS=30 # 30 seconds

# Closure Keywords (comma-separated)
CLOSURE_KEYWORDS=tchau,obrigado,valeu,até logo,até mais,até breve,bye,thanks

# Logging
LOG_LEVEL=INFO

# Toggle Settings
ENABLE_BACKGROUND_TASKS=True

